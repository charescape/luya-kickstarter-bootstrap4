{
    "name": "luyadev/luya-boilerplate-bootstrap4",
    "description": "LUYA boilerplate to kickstart projects with Bootstrap 4.",
    "type": "project",
    "license":"MIT",
    "minimum-stability" : "dev",
    "require": {
        "luyadev/luya-module-admin" : "dev-master as 1.0.0-beta5",
        "luyadev/luya-module-cms" : "dev-master as 1.0.0-beta5",
        "luyadev/luya-module-cmsadmin" : "dev-master as 1.0.0-beta5",
        "luyadev/luya-module-exporter" : "dev-master as 1.0.0-beta5",
        "luyadev/luya-bootstrap4": "dev-master as 1.0.0-beta5"
    },
    "require-dev": {
        "yiisoft/yii2-debug" : "~2.0.0",
        "yiisoft/yii2-gii" : "~2.0.0",
        "luyadev/luya-deployer": "dev-master"
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
			"setPermission": [
				{
				    "public_html/assets": "0777",
					"public_html/storage": "0777"
				}
			]
		},
        "asset-installer-paths": {
            "bower-asset-library": "vendor/bower"
        }
    }
}
